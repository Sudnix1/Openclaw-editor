<!-- Batch Processing Results Page -->
<style>
  .results-container {
    max-width: 100%;
    padding: 0;
  }

  .summary-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .summary-card {
    background: var(--dark-card, #1e2139);
    border-radius: 12px;
    padding: 25px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .summary-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .summary-card .icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
  }

  .summary-card.success .icon { color: #10b981; }
  .summary-card.retry .icon { color: #fbbf24; }
  .summary-card.failed .icon { color: #ef4444; }

  .summary-card .number {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 10px 0;
  }

  .summary-card.success .number { color: #10b981; }
  .summary-card.retry .number { color: #fbbf24; }
  .summary-card.failed .number { color: #ef4444; }

  .summary-card .label {
    font-size: 0.95rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .results-section {
    background: var(--dark-card, #1e2139);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 25px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .results-section h3 {
    font-size: 1.3rem;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    gap: 10px;
    color: white;
  }

  .keyword-item {
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 12px;
    border-left: 4px solid;
    transition: background 0.2s;
  }

  .keyword-item:hover {
    background: rgba(255, 255, 255, 0.04);
  }

  .keyword-item.success { border-left-color: #10b981; }
  .keyword-item.retry { border-left-color: #fbbf24; }
  .keyword-item.failed { border-left-color: #ef4444; }

  .keyword-name {
    font-weight: 600;
    font-size: 1.05rem;
    margin-bottom: 8px;
    color: white;
  }

  .keyword-details {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    font-size: 0.9rem;
    color: #9ca3af;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .badge-custom {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .badge-success {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
  }

  .badge-retry {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
  }

  .badge-failed {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }

  .error-message {
    margin-top: 8px;
    padding: 10px;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 6px;
    color: #ef4444;
    font-size: 0.85rem;
  }

  .action-buttons {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    flex-wrap: wrap;
  }

  .btn-custom {
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .empty-state {
    text-align: center;
    padding: 40px;
    color: #9ca3af;
  }

  .empty-state i {
    font-size: 3rem;
    margin-bottom: 15px;
    opacity: 0.5;
  }

  .duration-info {
    text-align: center;
    margin-top: 20px;
    padding: 15px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    color: #9ca3af;
    font-size: 0.9rem;
  }
</style>

<div class="results-container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white">
      <i class="bi bi-clipboard-check me-2"></i>
      Batch Processing Results
    </h1>
    <div class="text-muted">
      <i class="bi bi-clock me-1"></i>
      <%= new Date(results.timestamp).toLocaleString() %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="summary-cards">
    <div class="summary-card success">
      <div class="icon">
        <i class="bi bi-check-circle-fill"></i>
      </div>
      <div class="number"><%= results.summary.successful %></div>
      <div class="label">Successful</div>
    </div>

    <div class="summary-card retry">
      <div class="icon">
        <i class="bi bi-arrow-repeat"></i>
      </div>
      <div class="number"><%= results.summary.withRetry %></div>
      <div class="label">With Retries</div>
    </div>

    <div class="summary-card failed">
      <div class="icon">
        <i class="bi bi-x-circle-fill"></i>
      </div>
      <div class="number"><%= results.summary.failed %></div>
      <div class="label">Failed</div>
    </div>

    <div class="summary-card" style="border: 2px solid #6e47cc;">
      <div class="icon" style="color: #6e47cc;">
        <i class="bi bi-list-check"></i>
      </div>
      <div class="number" style="color: #6e47cc;">
        <%= results.summary.total %>
      </div>
      <div class="label">Total Processed</div>
    </div>
  </div>

  <!-- Duration Info -->
  <% if (results.duration) { %>
  <div class="duration-info">
    <i class="bi bi-stopwatch me-2"></i>
    <strong>Total Duration:</strong> <%= results.duration %>
  </div>
  <% } %>

  <!-- Successful Keywords -->
  <% if (results.successful && results.successful.length > 0) { %>
  <div class="results-section">
    <h3>
      <i class="bi bi-check-circle-fill" style="color: #10b981;"></i>
      Successfully Processed (<%= results.successful.length %>)
    </h3>
    <% results.successful.forEach(item => { %>
    <div class="keyword-item success">
      <div class="keyword-name">
        <i class="bi bi-check-circle me-2" style="color: #10b981;"></i>
        <%= item.keyword %>
      </div>
      <div class="keyword-details">
        <div class="detail-item">
          <i class="bi bi-clock"></i>
          <span><%= item.attempts || 1 %> attempt(s)</span>
        </div>
        <% if (item.titles !== null && item.titles !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-file-text"></i>
          <span><%= item.titles %> titles</span>
        </div>
        <% } else { %>
        <div class="detail-item">
          <i class="bi bi-exclamation-triangle" style="color: #fbbf24;"></i>
          <span style="color: #fbbf24;">No titles data</span>
        </div>
        <% } %>
        <% if (item.descriptions !== null && item.descriptions !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-card-text"></i>
          <span><%= item.descriptions %> descriptions</span>
        </div>
        <% } else { %>
        <div class="detail-item">
          <i class="bi bi-exclamation-triangle" style="color: #fbbf24;"></i>
          <span style="color: #fbbf24;">No descriptions data</span>
        </div>
        <% } %>
        <% if (item.overlays !== null && item.overlays !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-textarea"></i>
          <span><%= item.overlays %> overlays</span>
        </div>
        <% } %>
        <% if (item.timestamp) { %>
        <div class="detail-item">
          <i class="bi bi-calendar"></i>
          <span><%= new Date(item.timestamp).toLocaleTimeString() %></span>
        </div>
        <% } %>
        <span class="badge-custom badge-success">Success</span>
        <% if (item.source === 'openai-direct') { %>
        <span class="badge-custom" style="background: rgba(16, 185, 129, 0.2); color: #10b981;">
          <i class="bi bi-stars me-1"></i>OpenAI Direct
        </span>
        <% } else if (item.source === 'openai-fallback') { %>
        <span class="badge-custom" style="background: rgba(147, 51, 234, 0.2); color: #9333ea;">
          <i class="bi bi-robot me-1"></i>OpenAI Fallback
        </span>
        <% } else if (item.source === 'chatgpt') { %>
        <span class="badge-custom" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6;">
          <i class="bi bi-chat-dots me-1"></i>ChatGPT
        </span>
        <% } %>
      </div>

      <!-- Show ALL extracted data -->
      <% if (item.titlesData && item.titlesData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(16, 185, 129, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #10b981;"><i class="bi bi-file-text me-1"></i>Extracted Titles (<%= item.titlesData.filter(t => t).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.titlesData.forEach((title, idx) => { %>
            <% if (title) { %>
            <li style="margin: 4px 0;"><%= title %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <% if (item.descriptionsData && item.descriptionsData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(16, 185, 129, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #10b981;"><i class="bi bi-card-text me-1"></i>Extracted Descriptions (<%= item.descriptionsData.filter(d => d).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.descriptionsData.forEach((desc, idx) => { %>
            <% if (desc) { %>
            <li style="margin: 4px 0;"><%= desc %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <% if (item.overlaysData && item.overlaysData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(16, 185, 129, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #10b981;"><i class="bi bi-textarea me-1"></i>Extracted Text Overlays (<%= item.overlaysData.filter(o => o).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.overlaysData.forEach((overlay, idx) => { %>
            <% if (overlay) { %>
            <li style="margin: 4px 0;"><%= overlay %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <!-- Show warning if no data extracted -->
      <% if ((item.titles === null || item.titles === 0) && (item.descriptions === null || item.descriptions === 0)) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(251, 191, 36, 0.1); border-radius: 6px; color: #fbbf24; font-size: 0.85rem;">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> Keyword processed successfully but no PinClicks data was extracted from ChatGPT.
        <% if (item.rawDataKeys) { %>
        <br><small style="margin-top: 5px; display: block;">Data fields received from API: <%= item.rawDataKeys.join(', ') %></small>
        <% } %>
        <br><small style="margin-top: 5px; display: block; color: #9ca3af;">This usually means ChatGPT didn't return data in the expected format, or the parser couldn't extract it. The keyword was processed but Pinterest optimization data is missing.</small>
      </div>
      <% } %>
    </div>
    <% }); %>
  </div>
  <% } %>

  <!-- Keywords with Retries -->
  <% if (results.withRetry && results.withRetry.length > 0) { %>
  <div class="results-section">
    <h3>
      <i class="bi bi-arrow-repeat" style="color: #fbbf24;"></i>
      Processed with Retries (<%= results.withRetry.length %>)
    </h3>
    <% results.withRetry.forEach(item => { %>
    <div class="keyword-item retry">
      <div class="keyword-name">
        <i class="bi bi-arrow-repeat me-2" style="color: #fbbf24;"></i>
        <%= item.keyword %>
      </div>
      <div class="keyword-details">
        <div class="detail-item">
          <i class="bi bi-clock"></i>
          <span><%= item.attempts %> attempts needed</span>
        </div>
        <% if (item.titles !== null && item.titles !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-file-text"></i>
          <span><%= item.titles %> titles</span>
        </div>
        <% } else { %>
        <div class="detail-item">
          <i class="bi bi-exclamation-triangle" style="color: #fbbf24;"></i>
          <span style="color: #fbbf24;">No titles data</span>
        </div>
        <% } %>
        <% if (item.descriptions !== null && item.descriptions !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-card-text"></i>
          <span><%= item.descriptions %> descriptions</span>
        </div>
        <% } else { %>
        <div class="detail-item">
          <i class="bi bi-exclamation-triangle" style="color: #fbbf24;"></i>
          <span style="color: #fbbf24;">No descriptions data</span>
        </div>
        <% } %>
        <% if (item.overlays !== null && item.overlays !== undefined) { %>
        <div class="detail-item">
          <i class="bi bi-textarea"></i>
          <span><%= item.overlays %> overlays</span>
        </div>
        <% } %>
        <% if (item.timestamp) { %>
        <div class="detail-item">
          <i class="bi bi-calendar"></i>
          <span><%= new Date(item.timestamp).toLocaleTimeString() %></span>
        </div>
        <% } %>
        <span class="badge-custom badge-retry">Retry Success</span>
        <% if (item.source === 'openai-direct') { %>
        <span class="badge-custom" style="background: rgba(16, 185, 129, 0.2); color: #10b981;">
          <i class="bi bi-stars me-1"></i>OpenAI Direct
        </span>
        <% } else if (item.source === 'openai-fallback') { %>
        <span class="badge-custom" style="background: rgba(147, 51, 234, 0.2); color: #9333ea;">
          <i class="bi bi-robot me-1"></i>OpenAI Fallback
        </span>
        <% } else if (item.source === 'chatgpt') { %>
        <span class="badge-custom" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6;">
          <i class="bi bi-chat-dots me-1"></i>ChatGPT
        </span>
        <% } %>
      </div>

      <!-- Show ALL extracted data -->
      <% if (item.titlesData && item.titlesData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(251, 191, 36, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #fbbf24;"><i class="bi bi-file-text me-1"></i>Extracted Titles (<%= item.titlesData.filter(t => t).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.titlesData.forEach((title, idx) => { %>
            <% if (title) { %>
            <li style="margin: 4px 0;"><%= title %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <% if (item.descriptionsData && item.descriptionsData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(251, 191, 36, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #fbbf24;"><i class="bi bi-card-text me-1"></i>Extracted Descriptions (<%= item.descriptionsData.filter(d => d).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.descriptionsData.forEach((desc, idx) => { %>
            <% if (desc) { %>
            <li style="margin: 4px 0;"><%= desc %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <% if (item.overlaysData && item.overlaysData.length > 0) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(251, 191, 36, 0.05); border-radius: 6px; font-size: 0.85rem;">
        <strong style="color: #fbbf24;"><i class="bi bi-textarea me-1"></i>Extracted Text Overlays (<%= item.overlaysData.filter(o => o).length %>):</strong>
        <ol style="margin: 8px 0 0 0; padding-left: 20px;">
          <% item.overlaysData.forEach((overlay, idx) => { %>
            <% if (overlay) { %>
            <li style="margin: 4px 0;"><%= overlay %></li>
            <% } %>
          <% }); %>
        </ol>
      </div>
      <% } %>

      <!-- Show warning if no data extracted -->
      <% if ((item.titles === null || item.titles === 0) && (item.descriptions === null || item.descriptions === 0)) { %>
      <div style="margin-top: 10px; padding: 10px; background: rgba(251, 191, 36, 0.1); border-radius: 6px; color: #fbbf24; font-size: 0.85rem;">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> Keyword succeeded after <%= item.attempts %> attempts but no PinClicks data was extracted from ChatGPT.
        <% if (item.rawDataKeys) { %>
        <br><small style="margin-top: 5px; display: block;">Data fields received from API: <%= item.rawDataKeys.join(', ') %></small>
        <% } %>
        <br><small style="margin-top: 5px; display: block; color: #9ca3af;">This usually means ChatGPT didn't return data in the expected format, or the parser couldn't extract it. The keyword was processed but Pinterest optimization data is missing.</small>
      </div>
      <% } %>
    </div>
    <% }); %>
  </div>
  <% } %>

  <!-- Failed Keywords -->
  <% if (results.failed && results.failed.length > 0) { %>
  <div class="results-section">
    <h3>
      <i class="bi bi-x-circle-fill" style="color: #ef4444;"></i>
      Failed to Process (<%= results.failed.length %>)
    </h3>
    <% results.failed.forEach(item => { %>
    <div class="keyword-item failed">
      <div class="keyword-name">
        <i class="bi bi-x-circle me-2" style="color: #ef4444;"></i>
        <%= item.keyword %>
      </div>
      <div class="keyword-details">
        <div class="detail-item">
          <i class="bi bi-clock"></i>
          <span><%= item.attempts || 3 %> attempts made</span>
        </div>
        <span class="badge-custom badge-failed">Failed</span>
      </div>
      <% if (item.error) { %>
      <div class="error-message">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Error:</strong> <%= item.error %>
      </div>
      <% } %>
    </div>
    <% }); %>
  </div>
  <% } %>

  <!-- Empty State -->
  <% if (results.summary.total === 0) { %>
  <div class="empty-state">
    <i class="bi bi-inbox"></i>
    <h4>No results to display</h4>
    <p>No keywords were processed in this batch.</p>
  </div>
  <% } %>

  <!-- Action Buttons -->
  <div class="action-buttons">
    <a href="/keywords" class="btn btn-custom" style="background: #6e47cc; color: white;">
      <i class="bi bi-arrow-left me-2"></i>
      Back to Keywords
    </a>
    <button onclick="window.print()" class="btn btn-custom" style="background: #1e2139; color: white; border: 1px solid rgba(255, 255, 255, 0.1);">
      <i class="bi bi-printer me-2"></i>
      Print Report
    </button>
    <% if (results.failed && results.failed.length > 0) { %>
    <a href="/keywords?retry=<%= results.failed.map(f => f.keyword).join(',') %>" class="btn btn-custom" style="background: #ef4444; color: white;">
      <i class="bi bi-arrow-repeat me-2"></i>
      Retry Failed Keywords
    </a>
    <% } %>
  </div>
</div>
