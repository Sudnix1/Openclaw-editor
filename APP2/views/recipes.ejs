                      <i class="fab fa-wordpress wp-status-icon"></i>
                      <%= recipe.wordpressPublication.wp_status %>
                    </span>
                  <% } %>
                <% } %>

                <!-- Canva Image Indicator -->
                <% if (recipe.hasCanvaImage) { %>
                  <span class="canva-status-indicator"
                        title="Canva image uploaded and ready for WordPress publishing"
